doctype html
html
    include includes/head.pug
    body
        nav(class="navbar navbar-fixed-top navbar-inverse")
            div(class="container")
                div(class="navbar-header")
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                        span(class="sr-only")
                            | Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="/")
                        | Project name
                div(id="navbar" class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        li(class="active")
                            a(href="/")
                                | Home
                        if authenticated
                            li
                                a(href="/chatroom")
                                    | Chat Room       
        div(class="container")
            div(class="row row-offcanvas row-offcanvas-right")
                div(class="col-xs-12 col-sm-9")
                    p(class="pull-right visible-xs")
                        button(type="button" class="btn btn-primary btn-xs" data-toggle="offcanvas")
                            | Toggle nav
                    div(class="jumbotron")
                        h1
                            | Hello, world!
                        p
                            | This is an example to show the potential of an offcanvas layout pattern in Bootstrap. Try some responsive-range viewport sizes to see it in action.
                    div(class="row")
                        include includes/thread.generator.pug                    
                div(class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar")
                    div(class="list-group")
                    #user
                    if user
                        a(href="/profile/" + user[0]._id class="list-group-item active")
                            | Profile
                        a(href="/inbox/user/" + user[0]._id class="list-group-item")
                            | Inbox
                        a(href="/logout" class="list-group-item")
                            | Logout
                        a(href="/createthread/" + id class="list-group-item")
                            | Create a new Thread
                    else    
                        a(href="/register" class="list-group-item active")
                            | Register
                        a(href="/login" class="list-group-item")
                            | Login
        hr
    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="../static/js/offcanvas.js")
