doctype html
html
    include includes/head.pug
    body
        nav(class="navbar navbar-fixed-top navbar-inverse")
            div(class="container")
                div(class="navbar-header")
                    button(type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar")
                        span(class="sr-only")
                            | Toggle navigation
                        span(class="icon-bar")
                        span(class="icon-bar")
                        span(class="icon-bar")
                    a(class="navbar-brand" href="#")
                        | Project name
                div(id="navbar" class="collapse navbar-collapse")
                    ul(class="nav navbar-nav")
                        li(class="active")
                            a(href="/")
                                | Home
                        if authenticated
                            li
                                a(href="/chatroom")
                                    | Chat Room
                        li
                            a(href="#contact")
                                | Contact
        div(class="container")
            h1
                = username 
                |  Profile
            hr
            div(class="row")
            <!-- left column -->
            div(class="col-md-3")
                div(class="text-center")
                    if img === 'default-img.gif'
                        img(src="../../static/images/uploads/" + img class="avatar img-circle" alt="avatar")
                    else
                        img(src="../../static/images/uploads/" + id + img class="avatar img-circle" alt="avatar")
                    if authenticated
                        button(type="button" class = "btn btn-primary" data-toggle="modal" data-target="#messageModal")
                            | Send a message
                        div(class="modal fade" id="messageModal" tabindex="-1" role="dialog" aria-labelledby="messageModalLabel" aria-hidden="true")
                            div(class="modal-dialog" role="document")
                                div(class="modal-content")
                                    div(class="modal-header")
                                        h5(class="modal-title" id="messageModalLabel")
                                            = 'New message:'
                                        button(type="button" class="close" data-dismiss="modal" aria-label="Close")
                                            span(aria-hidden="true") &times;
                                    div(class="modal-body")
                                        form(method="post" action="/message")
                                            div(class="form-group")
                                                label(for="msg-to", class="form-control-label")
                                                     | Message to :
                                                input(type="text" class="form-control" name="username" readonly=true value=username)
                                            div(class="form-group")
                                                label(for="msg-heading" class="form-control-label")
                                                     | Message Heading
                                                input(type="text" class="form-control" id="msg-heading" name="heading")
                                            div(class="form-group")
                                                label(for="msg-content" class="form-control-label")
                                                     | Message content
                                                textarea(class="form-control" id="msg-content" name="content")
                                            div(class="form-group")
                                                button(type="button" class="btn btn-secondary" data-dismiss="modal")
                                                     | Close 
                                                button(type="submit" class="btn btn-primary")
                                                     | Send message
            
            <!-- edit form column -->
            div(class="col-md-9 personal-info")
                h3
                    | Personal info
                div(class="form-group")
                    label(class="col-lg-3 control-label")
                        | First name:
                    div(class="col-lg-8")
                        input(class="form-control" type="text" value=firstName name="firstName" readonly="true")
                div(class="form-group")
                    label(class="col-lg-3 control-label")
                        | Last name:
                    div(class="col-lg-8")
                        input(class="form-control" type="text" value=lastName name="lastName" readonly="true")
                div(class="form-group")
                    label(class="col-lg-3 control-label")
                        | Username
                    div(class="col-lg-8")
                        input(class="form-control" type="text" value=username name="username" readonly="true")
                div(class="form-group")
                    label(class="col-lg-3 control-label")
                        | Email:
                    div(class="col-lg-8")
                        input(class="form-control" type="text" value=email name="email" readonly="true")
                div(class="form-group")
                    label(class="col-lg-3 control-label")
                        | Signature:
                    div(class="col-lg-8")
                        input(class="form-control" type="text" value=signature name="signature" readonly="true")

        hr
        